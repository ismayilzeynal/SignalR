@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Category Table</h4>
                    <a asp-area="adminarea" asp-action="create" asp-controller="category" class="btn btn-success">Create Category</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description.</th>
                                    <th>Settings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        @if (item.Description.Length > 13)
                                        {
                                            <td>@item.Description.Substring(0, 10)...</td>
                                        }
                                        else
                                        {
                                            <td>@item.Description</td>
                                        }
                                        <td>
                                            <a asp-action="detail" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                                <i class="mdi mdi-account-card-details"></i>
                                            </a>
                                            <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                                <i class="mdi mdi-tooltip-edit"></i>
                                            </a>
                                            <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                <i class="mdi mdi-delete"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

