@model ChangeRoleVM
@{
    ViewData["Title"] = "EditRole";
}

<div class="container">
    <div class="row">
        <form method="post">
            @foreach (var item in Model.AllRoles)
            {
                if(Model.UserRoles.Any(r=>r==item.Name))
                {
                    <input name="roles" type="checkbox" value="@item.Name" checked /> @item.Name <br /> 
                }
                else
                {
                    <input name="roles" type="checkbox" value="@item.Name" /> @item.Name <br />
                }
            }
            <button type="submit">Submit</button>
        </form>
    </div>
</div>

