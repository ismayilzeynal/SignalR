@using FrontToBack.Models.Demo
@model List<Book>

<div class="container">
        @foreach (var book in Model)
        {
            <p>BookName=> @book.Name</p>
            @foreach(var image in book.BookImages)
            {
                <span>Image: @image.ImageUrl</span>
            }

            @foreach (var bookGenre in book.BookGenres)
            {
                <p>@bookGenre.Genre.Name</p>
            }

            @foreach (var bookAuthor in book.BookAuthors)
            {
                <p>@bookAuthor.Author.Name</p>
                <p>@bookAuthor.Author.SocialPage.Facebook</p>
            }
            <hr />
        }   
</div>