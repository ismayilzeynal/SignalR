@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData["Error"] != null)
    {
        <div class="row justify-content-center">
            <div class="alert alert-danger col-lg-4" id="successMesage">
                @TempData["Error"]
            </div>
        </div>
    }
    <input type="hidden" value="@ViewBag.ProductCount" id="productCount" />
    <div class="row" id="productList">
        @await Component.InvokeAsync("Product",3)
    </div>
    <div class="row justify-content-center mt-5">
        <button id="loadMoreBtn" class="btn-primary btn">Load More...</button>
    </div>
</div>